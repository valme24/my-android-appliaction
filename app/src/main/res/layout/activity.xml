<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/linearLayout"
                                                   android:visibility="visible"
>


    <TextView
            android:text="@string/question"
            android:layout_width="304dp"
            android:layout_height="112dp" android:id="@+id/question"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAllCaps="false" android:autoText="false" android:freezesText="false"
            android:layout_marginTop="52dp" app:layout_constraintHorizontal_bias="0.092"
            app:layout_constraintBottom_toTopOf="@+id/rg" app:layout_constraintVertical_bias="0.269"
            android:textSize="30sp"/>
    <RadioGroup
            android:layout_width="274dp"
            android:layout_height="354dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.25" app:layout_constraintVertical_bias="0.528"
            android:id="@+id/rg">
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="53dp" android:id="@+id/rb1" tools:text="@string/rbt" android:text="@string/rbt"/>
        <RadioButton
                android:text="@string/radio_button_text2"
                android:layout_width="match_parent"
                android:layout_height="56dp" android:id="@+id/rb2"
                tools:text="@string/radio_button_text2"/>
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="54dp" android:id="@+id/rb3"
                tools:text="@string/radio_button_text3" android:text="@string/radio_button_text3"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>